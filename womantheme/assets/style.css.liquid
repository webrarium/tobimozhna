@import url('https://fonts.googleapis.com/css2?family=Commissioner:wght@100;200;300;400;500;600;700;800;900&display=swap');
@font-face {
   font-family: pt-root-ui;
   src: url({{ 'pt-root-ui_medium.woff2' | asset_url }});
   font-weight: 500;}

@font-face {
   font-family: pt-root-ui;
   src: url({{ 'pt-root-ui_regular.woff2' | asset_url }});
   font-weight: 400;
}
@font-face {
   font-family: pt-root-ui;
   src: url({{ 'pt-root-ui_bold.woff2' | asset_url }});
   font-weight: 700;
}

:root {
    --main-black: #222222;
    --body-bg: #F1F1F1;
}
::-webkit-scrollbar {
    width: 10px;
}
::-webkit-scrollbar-thumb {
  background: var(--main-black);
}
.button {
    width: 200px;
    background: var(--main-black);
    cursor: pointer;
    outline: none;
    border: none;
    font-family: pt-root-ui;
    font-weight: 500;
    font-size: 14px;
    padding: 17px 10px;
    letter-spacing: .05em;
    text-transform: uppercase;
    color: white;
    text-align: center;
    line-height: 100%;
}
.button:hover {
    background: #A8A8A8;
}
body{
    background: var(--body-bg);
    color: var(--main-black);
    font-family: 'Commissioner', sans-serif;
    font-size: 18px;

}
.container {
    max-width: min(90%, 1340px);
    margin: 0 auto;
    padding: 0 20px;
}
header {
    position: sticky;
    z-index: 2;
    top:0;
    left:0;
    width: 100%;
    height: 50px;
    background: var(--body-bg);
    font-family: pt-root-ui;
    margin-bottom: 5vh;
}
header .container {
    height: 100%;
}
header .navbar-wrp {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 100%;
}
header .navbar-wrp .nav-menu {
    display: flex;
    gap: 120px;
    align-items: center;
}
header .navbar-wrp ul {
    list-style: none;
}
header .navbar-wrp .nav-links-list {
    display: flex;
    align-items: center;
    gap: 20px;
    text-transform: uppercase;
}
header .navbar-wrp .nav-links-list > li {
    position: relative;
}
header .navbar-wrp .nav-links-list .nav-link {
    padding: 0 10px;
    font-size: 14px;
}
header .navbar-wrp .nav-links-list .nav-links-list-nested {
    position: absolute;
    left:0;
    background: var(--body-bg);
    max-height: 0;
    overflow:hidden;
    transition: all .2s ease;
}
header .navbar-wrp .nav-links-list .nav-links-list-nested li{
    white-space: nowrap;
    padding: 5px 0;
    font-size: 12px;
}
header .navbar-wrp .nav-links-list > li.open .nav-links-list-nested {
    max-height: 500px;
    padding: 10px;

} 

.menu-icon {
  margin  : 20px auto;
  width   : 20px;
  height  : 14px;
  cursor  : pointer;
  position: relative;
  display: none;
}

.menu-icon span {
  background-color: black;
  height          : 2px;
  position        : absolute;
  width           : 100%;
  left            : 0;
  transition      : all 0.3s ease;
  border-radius   : 10px;
}

.menu-icon span:first-child {
  top: 0;
}

.menu-icon span:nth-child(2) {
  top: 6px;
}

.menu-icon span:last-child {
  top: 12px;
}

.menu-icon.open span:nth-child(2) {
  opacity: 0;
}

.menu-icon.open span:first-child,
.menu-icon.open span:last-child {
  top             : 6px;
}

.menu-icon.open span:first-child {
  transform: rotate(45deg);
}

.menu-icon.open span:last-child {
  transform: rotate(-45deg);
}



.hero-section {
    {% comment %} background: url({{ 'hero-bg.jpg' | asset_url }}); {% endcomment %}
    background-size: cover;
    background-position: center;
    height: 95vh;
    margin-top: -5vh;
}
.hero-section .container {
    position: relative;
    height: 100%;
    width: 100%;
}
.hero-section h1 {
    font-family: 'Commissioner', sans-serif;
    position: absolute;
    bottom: 5vh;
    left: 0;
    font-style: normal;
    font-weight: 500;
    font-size: 18px;
    line-height: 150%;
    color: #FFFFFF;
    max-width: 312px;
}

.fp-product-section {}
.fp-product-section .fp-product-wrp {
    display: flex;
}

.fp-product-section.reverse .fp-product-wrp {
    display: flex;
    flex-direction: row-reverse;
}
.fp-product-section .fp-product-wrp .fp-product-img {
    width: 50%;
    height: 90vh;
    object-fit: cover;
}
.fp-product-section .fp-product-wrp .fp-product-inf-wrp {
    padding: 0 5%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 50%;
}
.fp-product-section .fp-product-wrp .fp-product-inf-wrp h2 {
    font-family: pt-root-ui;
    font-weight: 400;
    font-size: 32px;
    line-height: 150%;
    text-align: center;

}
.fp-product-section .fp-product-wrp .fp-product-inf-wrp p {
    margin: 8% 0 10%;
    
    line-height: 150%;
    text-align: center;
}
.fp-product-section .fp-product-wrp .fp-product-inf-wrp p a {
    color: #4c5841;
}
.fp-product-section .fp-product-wrp .fp-product-inf-wrp p a:hover {
    color: #62695a;
}


footer {
    padding: 80px 0;
    font-family: pt-root-ui;
    font-size: 12px;
}
footer .f-line {
    width: 100%;
    height: 1px;
    background: var(--main-black);
    margin-bottom: 80px;
}
.footer-wrp {
    display: flex;
    gap: 40px;
}

.footer-menu {
    width: 100%;
}
footer ul {
    list-style: none;
}
.f-links-list {
    width: 100%;
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    justify-items: center;
}
.f-menu-head {
    font-weight: bold;
    margin-bottom: 15px
}
.f-links-list-nested {
    display: flex;
    flex-direction: column;
    gap: 10px;
}





/* product */
.product-wrp {
    display: flex;
    gap: 140px;
}

.product-gallery {
    width:40%;
}

#lightSlider img {
    width: 100%;
    max-height: 762px;
    object-fit: cover;
}
.product-info {
    display: flex;
    flex-direction: column;
    line-height: 150%;
}
.product-title {
    font-family: pt-root-ui;
    font-size: 32px;
    line-height: 150%;
    margin-bottom: 20px;
}
.product-price {
    font-weight: 500;

    margin-bottom: 20px;

}
.product-desc {
    margin-bottom: 15px;
}
.product-desc strong {
    font-weight: 500;
}
.product-info select {
    display: block;
    background: transparent;
    outline: none;
    border: none;
    margin: 0 0 15px -5px;
    text-transform: uppercase;
    cursor: pointer;
    font-size: 18px;
    line-height: 150%;
    font-weight: 500;
    color: var(--main-black);
    font-family: 'Commissioner', sans-serif;
}
.product-info select option {
    background: transparent;
    outline: none;
    border: none;
    padding:10px;
}
.quantity-wrp {
    font-weight: 500;
    text-transform: uppercase;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 5px;
}
.quantity {
    display: inline-flex;
    border: 1px solid #D9D9D9;
    padding: 5px;
}
.quantity > div {
    padding: 0 10px;
    cursor: pointer;
}
.quantity input {
    width: 25px;
    text-align: center;
    background: transparent;
    outline: none;
    border: none;
    font-size: 18px;
    line-height: 150%;
    font-weight: 500;
    color: var(--main-black);
    margin:0 5px;
    -moz-appearance: textfield;
}
.quantity input::-webkit-outer-spin-button,
.quantity input::-webkit-inner-spin-button {
  -webkit-appearance: none;
}
.size-help {
    display: block;
    font-weight: 500;
    color: #4C5841;
    text-decoration-line: underline;
    margin: 20px 0;
}
.size-help:hover {
    color: #62695A;
}
.buttons-wrp {
    display: flex;
    gap: 30px;
    flex-wrap: wrap;

}
.related-set-wrp {
    display: flex;
    gap: 20px;
    margin-top: auto;
    padding-top: 30px;
    flex-wrap: wrap;
}
.related-set-wrp img {
    flex: 0 1 126px;
}
.related-set-inf {
    flex: 1 0 200px;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    gap: 15px;
}
.related-set-inf h2 {
    font-family: pt-root-ui;
    text-transform: uppercase;
    
}
.related-set-inf h3 {
    font-family: pt-root-ui;
    font-size: 16px;
}
#shopify-section-product-recommendations {
    margin-top: 100px;
}
#shopify-section-product-recommendations h2 {
    font-family: pt-root-ui;
    text-transform: uppercase;
}
#shopify-section-product-recommendations .recommendations-products-wrp {
    margin-top: 40px;
    display: grid;
    grid-template-columns: repeat(auto-fit,minmax(300px,400px));
    grid-auto-rows: auto;
    gap: 40px;
}
#shopify-section-product-recommendations .recommendations-products-wrp .product__title {
    font-family: pt-root-ui;
    text-align: center;
    font-size: 1.5em;
    font-weight: 700;
}

#shopify-section-product-recommendations .recommendations-products-wrp .product__price {
    text-align: center;
}




/* cart */



.cart-section h1 {
    font-family: pt-root-ui;
    font-size: 32px;
    line-height: 150%;
    text-align: center;
    margin-bottom: 50px;
    text-transform: uppercase;
}
.cart-line-item {
    display: flex;
    margin-bottom: 25px;
    line-height: 150%;
    gap: 20px;
    font-weight: 500;
}
.cart-item-info {
    display: flex;
    justify-content: space-between;
    width: 100%;
    align-items: center;
    gap: 10%;
}
.cart-product-title-wrp {
    margin-right: auto;
}
.cart-product-title {
}
.variant-title {
    text-transform: lowercase;
    font-weight:400;
}
.cart-btm {
    display: flex;
    flex-direction: column;
    gap: 40px;
    align-items: flex-end;
    line-height: 150%;
    font-weight: 600;
    border-top: 1px solid #D9D9D9;
    padding: 40px 0;
