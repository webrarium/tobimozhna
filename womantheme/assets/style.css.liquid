    }






    /*product*/
    .product-wrp {
        flex-direction:column;
        gap: 20px;
    }
    .product-gallery {
        width: 100%;
    }
    #lightSlider img {
        max-height: 110vw;
    }

    .product-title {
        font-size: 20px;
    }
    .product-info select {
        font-size: 14px;
    }
    .buttons-wrp {
        gap: 20px;
    }
    .related-set-wrp img {
        flex: 0 1 120px;
    }
    .related-set-inf {
        flex: 1 0 163px;
    }
    #shopify-section-product-recommendations {
        margin-top: 60px;
    }
    #shopify-section-product-recommendations .recommendations-products-wrp {
        grid-template-columns: 1fr 1fr;
            margin-top: 20px;
    }
    #shopify-section-product-recommendations .recommendations-products-wrp .product__title {
        font-size: 16px;
    }




    /*collections*/
    .collections {
        {% comment %} grid-template-columns: repeat(auto-fit,minmax(170px,1fr)); {% endcomment %}
        grid-template-columns: 1fr 1fr;
        gap: 20px;
    }
    .collection-card h2 {
        font-size: 16px;
    }
    .collection-card img {
        max-height: 150px;
    }
    .collections-section h1,.collection-products-section h1 {
