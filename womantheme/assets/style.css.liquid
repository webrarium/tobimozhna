.cart-btns input {
    width: auto;
}

.cart-empty {
    text-align: center;
}
.cart-empty p {
    text-transform: uppercase;
    font-family: pt-root-ui;
    font-weight:700;
}
.cart-empty a {
    color: #4C5841;
}


/*collections*/
.collections-section h1{
    font-family: pt-root-ui;
    font-style: normal;
    font-weight: 700;
    font-size: 32px;
    line-height: 150%;
    text-transform: uppercase;
    text-align: center;
    margin-bottom: 50px;
}
.collections {
    display: grid;
    grid-template-columns:repeat(auto-fit, minmax(300px, 1fr)); 
    grid-auto-rows: auto;
    gap: 40px;
}
.collection-card {
    display: flex;
    flex-direction: column;
}
.collection-card img {
    width: 100%;
    object-fit: cover;
    max-height: 400px;

}
.collection-card h2 {
    font-family: pt-root-ui;
    text-transform: uppercase;
    text-align: center;
}

/* collection */
.collection-products-section h1 {
    font-family: pt-root-ui;
    font-style: normal;
    font-weight: 700;
    font-size: 32px;
    line-height: 150%;
    text-transform: uppercase;
    text-align: center;
    margin-bottom: 50px;
}
.collection-products-wrp {
    display: grid;
    grid-template-columns:repeat(auto-fit, minmax(300px, 350px)); 
    grid-auto-rows: auto;
    gap: 40px;
    justify-content: center;
}
.product-card {
    display: flex;
    flex-direction: column;
}
.product-card img {
    width: 100%;
    object-fit: cover;
    max-height: 350px;
}
.product-card h2 {
    font-family: pt-root-ui;
    text-align: center;
}
.product-card .product-card-price {
    text-align: center;

}


/* Page */

.page-content-section h1 {
    font-family: pt-root-ui;
    font-style: normal;
    font-weight: 700;
    font-size: 32px;
    line-height: 150%;
    text-transform: uppercase;
    text-align: center;
    margin-bottom: 50px;
}

.page-content-section h2 {
    font-family: pt-root-ui;
    font-style: normal;
    font-weight: 700;
    font-size: 18px;
    line-height: 150%;
    text-transform: uppercase;
    text-align: center;
    margin-bottom: 15px;
}
.page-content-section ul, .page-content-section ol {
    list-style-position: inside;
}
.page-content-section p {
    line-height: 150%;
    margin-bottom: 1rem;
}
.page-content-section .video-grid{
    display: grid; 
    {% comment %} grid-template-columns: repeat(auto-fit, minmax(500px, 1fr));  {% endcomment %}
    grid-template-columns: 1fr 1fr; 
    grid-auto-rows: auto;
    gap: 20px;
}







@media (max-width: 768px) {
    body{
        font-size: 14px;
    }
    .container {
        max-width: 100%;
    }
    .button {
        width: 140px;
        font-size: 12px;
    }

    header .navbar-wrp .nav-menu {
        gap:5vw;
    }
    header nav {
        position: fixed;
        top:50px;
        width: 100%;
        left:0;
        right:0;
        background: var(--body-bg);
        max-height: 0;
        overflow: hidden;
        transition: all .5s ease;
    }
    header nav.open {
        max-height: 900px;
    }
    .nav-links-list {
        flex-direction: column;
        padding: 2vh 0;
        height: 100%;

    }

    .nav-links-list li {
        width: 100%;
        display: flex;
        flex-direction: column;
    }
    .nav-links-list li a {
        text-align: center;

    }


    header .navbar-wrp .nav-links-list>li .nav-links-list-nested {
        position: static;
    }
    .menu-icon {
        display: block;
    }






    .footer-wrp {
        flex-direction:column;
        align-items: center;
    }
    .f-links-list {
        display: flex;
        flex-direction:column;
        gap: 20px;
    }
    .f-links-list li {
        text-align: center;
    }
    .footer-img {
        max-width: 300px;
    }
    
